<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ednovak.nearby"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.ednovak.nearby.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="net.ednovak.Nearby.xmppService.LOGIN_UPDATE" />
            </intent-filter>
        </activity>
        <activity android:name="net.ednovak.nearby.displayMessageAct" />
        <activity android:name="net.ednovak.nearby.answerAct" />
        <activity android:name="net.ednovak.nearby.paillierTest" />
        <activity android:name="net.ednovak.nearby.messageTest" />
        <activity android:name="net.ednovak.nearby.settings" />
        <!-- android:theme="@style/preferences"/> -->
        <activity android:name="net.ednovak.nearby.names" />

        <service android:name="net.ednovak.nearby.xmppService" />

        <activity
            android:name="net.ednovak.nearby.processedQueries"
            android:launchMode="singleTop" />
        <activity
            android:name="net.ednovak.nearby.BloomFilterTest"
            android:label="@string/title_activity_bloom_filter_test" >
        </activity>
    </application>

</manifest>